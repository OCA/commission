<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="report_settlement">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="report.internal_layout">
                        <div class="page">
                            <h2>Settle Commissions Report</h2>
                            <div class="row mt32 mb32">
                                <div class="col-xs-3" t-if="o.agent">
                                    <strong>Agent:</strong>
                                    <p t-field="o.agent"/>
                                </div>
                                <div class="col-xs-2" t-if="o.date_from">
                                    <strong>From:</strong>
                                    <p t-field="o.date_from"/>
                                </div>
                                <div class="col-xs-2" t-if="o.date_to">
                                    <strong>To:</strong>
                                    <p t-field="o.date_to"/>
                                </div>
                            </div>

                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Invoice date</th>
                                        <th>Invoice</th>
                                        <th>Invoice line</th>
                                        <th>Customer</th>
                                        <th>Commission</th>
                                        <th class="text-right">Amount settled
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="o.lines" t-as="l">
                                        <td>
                                            <span t-field="l.date"/>
                                        </td>
                                        <td>
                                            <span t-field="l.invoice"/>
                                        </td>
                                        <td>
                                            <span t-field="l.invoice_line"/>
                                        </td>
                                        <td>
                                            <span t-field="l.invoice.partner_id.name"/>
                                        </td>
                                        <td>
                                            <span t-field="l.commission"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="l.settled_amount"
                                                  t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                            <div class="row">
                                <div class="col-xs-4 pull-right">
                                    <table class="table table-condensed">
                                        <tr>
                                            <td>
                                                <strong>Total</strong>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="o.total"
                                                      t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}"/>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>

                        </div>
                    </t>
                </t>
            </t>

        </template>

        <!--View report Settle Commissions Condensed-->
        <template id="report_settlement_condensed">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="report.internal_layout">
                        <div class="page">
                            <div class="oe_structure"/>
                            <h2>Settle Commissions Report Condensed:</h2>
                            <div class="row mt32 mb32">
                                <div class="col-xs-3" t-if="o.agent">
                                    <strong>Agent:</strong>
                                    <p t-field="o.agent"/>
                                </div>
                                <div class="col-xs-2" t-if="o.date_from">
                                    <strong>From:</strong>
                                    <p t-field="o.date_from"/>
                                </div>
                                <div class="col-xs-2" t-if="o.date_to">
                                    <strong>To:</strong>
                                    <p t-field="o.date_to"/>
                                </div>
                            </div>

                            <div t-if="o.lines">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Invoice date</th>
                                            <th>Invoice</th>
                                            <th>Customer</th>
                                            <th class="text-right">Amount
                                                settled
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-set="invoice_verified"
                                           t-value="false"/>
                                        <tr t-foreach="o.lines.sorted(key=lambda b: b.invoice.internal_number)"
                                            t-as="line">
                                            <t t-if="line.invoice.internal_number != invoice_verified">
                                                <td>
                                                    <span class="oe_editable"
                                                          t-field="line.invoice.date_invoice"/>
                                                </td>
                                                <td>
                                                    <span class="oe_editable"
                                                          t-field="line.invoice.internal_number"/>
                                                </td>
                                                <td>
                                                    <span class="oe_editable"
                                                          t-field="line.invoice.partner_id.name"/>
                                                </td>
                                                <td class="text-right">
                                                    <span t-field="line.invoice.commission_total"
                                                          t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}"/>
                                                </td>
                                                <t t-set="invoice_verified"
                                                   t-value="line.invoice.internal_number"/>
                                            </t>
                                        </tr>
                                    </tbody>
                                </table>
                                <div class="row">
                                    <div class="col-xs-4 pull-right">
                                        <table class="table table-condensed">
                                            <tr>
                                                <td>
                                                    <strong>Total</strong>
                                                </td>
                                                <td class="text-right">
                                                    <span t-field="o.total"
                                                          t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}"/>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</openerp>


