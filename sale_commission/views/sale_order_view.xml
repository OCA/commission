<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_order_agent_form_inherit" model="ir.ui.view">
        <field name="name">sale.agent.order.inherit.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="order_line" position="attributes">
                <attribute name="context">{'partner_id': partner_id}</attribute>
            </field>
            <xpath expr="//field[@name='order_line']/tree//field[@name='price_subtotal']" position="after">
                <field name="commission_free"/>
                <field name="agents" readonly="1" widget="many2many_tags"/>
                <button name="action_edit_agents"
                        icon="fa-users" attrs="{'invisible': [('commission_free', '=', True)]}" type="object"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/form//field[@name='customer_lead']/.." position="after">
                <field name="commission_free"/>
                <field name="agents"
                       attrs="{'readonly': [('commission_free', '=', True)]}"/>
            </xpath>
            <field name="amount_total" position="after">
                <field name="commission_total"
                       widget="monetary"
                       options="{'currency_field': 'currency_id'}"/>
            </field>
            <xpath expr="//field[@name='order_line']" position="after">
                <button name="recompute_lines_agents" type="object" string="Recompute lines agents" states="draft"></button>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="view_sale_order_line_tree">
        <field name="name">sale.order.line.agent.tree</field>
        <field name="model">sale.order.line.agent</field>
        <field name="arch" type="xml">
            <tree string="Agents" editable="bottom">
                <field name="agent"/>
                <field name="commission"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_sale_order_line_agent_only">
        <field name="name">sale.order.line.agent.only</field>
        <field name="model">sale.order.line</field>
        <field name="arch" type="xml">
            <form>
                <field name="commission_free" invisible="True"/>
                <field name="agents" attrs="{'readonly': [('commission_free', '=', True)]}"/>
                <footer class="oe_edit_only">
                    <button string="Confirm" special="save" class="oe_highlight"/>
                    <button string="Discard" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
