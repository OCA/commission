<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="report_settlement">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.internal_layout">
                    <div class="page">
                        <div class="row mt32 mb32">
                            <div class="col-auto col-3 mw-100 mb-2" t-if="o.agent_id">
                                <strong>Agent:</strong>
                                <p t-field="o.agent_id" />
                            </div>
                            <div class="col-auto col-3 mw-100 mb-2" t-if="o.date_from">
                                <strong>From:</strong>
                                <p t-field="o.date_from" />
                            </div>
                            <div class="col-auto col-3 mw-100 mb-2" t-if="o.date_to">
                                <strong>To:</strong>
                                <p t-field="o.date_to" />
                            </div>
                        </div>
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th name="th_reference">Reference Number</th>
                                    <th name="th_invoice_date">Invoice date</th>
                                    <th name="th_invoice_line">Invoice line</th>
                                    <th name="th_partner">Partner</th>
                                    <th name="th_partner_shipping">Ship To Address</th>
                                    <th name="th_commission">Commission</th>
                                    <th
                                        name="th_amount_settled"
                                        class="text-right"
                                    >Amount settled</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.line_ids" t-as="l">
                                    <td name="td_reference">
                                        <span t-field="l.order_id" />
                                    </td>
                                    <td name="td_invoice_date">
                                        <span t-field="l.date" />
                                    </td>
                                    <td name="td_invoice_line">
                                        <span t-field="l.invoice_line_id" />
                                    </td>
                                    <td name="td_partner">
                                        <span t-field="l.partner_id" />
                                    </td>
                                    <td name="td_partner_shipping">
                                        <span t-field="l.partner_shipping_id" />
                                    </td>
                                    <td name="td_commission">
                                        <span t-field="l.commission_id" />
                                    </td>
                                    <td name="td_amount_settled" class="text-right">
                                        <span
                                            t-field="l.settled_amount"
                                            t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"
                                        />
                                    </td>
                                </tr>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="4">
                                        <strong>Total</strong>
                                    </td>
                                    <td class="text-right">
                                        <span
                                            t-field="o.total"
                                            t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"
                                        />
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
