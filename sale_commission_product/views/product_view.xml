<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="product_template_form_view_agents_product" model="ir.ui.view">
        <field name="name">product.template.common.form.agents.product</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath
                expr="//form/sheet/notebook/page[@name='sales']/group[@name='sale']"
                position="after"
            >
                <separator colspan="2" string="Agents" />
                <field
                    name="agent_ids"
                    attrs="{'invisible': [('commission_free', '=', True)]}"
                    widget="many2many_tags"
                />
            </xpath>
        </field>
    </record>
</odoo>
