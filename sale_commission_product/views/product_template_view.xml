<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="product_template_form_view_commission_product" model="ir.ui.view">
            <field name="name">product.template.common.form.commission.product</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/notebook/page[@string='Sales']/group[1]" position="after">
                    <separator colspan="2" string="Agents/Commissions"/>
                    <group>
                        <field name="commission"/>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
