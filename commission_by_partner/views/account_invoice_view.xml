<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="invoice_line_form_agent_by_partner" model="ir.ui.view">
            <field name="model">account.invoice.line</field>
            <field name="inherit_id" ref="sale_commission.invoice_line_form_agent" />
            <field name="arch" type="xml">
                <field name="agents" position="attributes">
                   <attribute name="context">{'partner_id': parent.partner_id}</attribute>        
                </field>
            </field>
        </record>

        <record id="invoice_form_agent_by_partner" model="ir.ui.view">
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="sale_commission.invoice_form_agent"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_line']/tree//field[@name='agents']" position="attributes">
                    <attribute name="context">{'partner_id': partner_id}</attribute>     
                </xpath>
            </field>
        </record>

    </data>
</openerp>
