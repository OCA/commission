<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_commission_automation" model="ir.ui.view">
        <field name="name">res.config.settings.view.commission.automation</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='sale_config_online_confirmation_pay']" position="after">
                <div id="sales_settings_invoicing_policy"
                    class="col-12 col-lg-6 o_setting_box">
                <div class="o_setting_right_pane">
                    <label for="sale_commission_automation_option"/>
                    <div class="text-muted">
                        Choose how to autopoluate Agents on Sale Order Lines
                    </div>
                    <div class="content-group">
                        <div class="mt16">
                            <field name="sale_commission_automation_option" class="o_light_label" widget="radio"/>
                        </div>
                    </div>
                </div>
            </div>
            </xpath>
        </field>
    </record>

</odoo>
