<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_partner_form_agent_multi_com" model="ir.ui.view">
        <field name="name">res.partner.form.agent.multi.com</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="sale_commission.view_partner_form_agent" />
        <field name="priority" eval="99" />
        <field name="arch" type="xml">
            <field name="commission_id" position="replace">
                <field name="use_multi_type_commissions" groups="base.group_no_one" />
                <field
                    name="commission_id"
                    attrs="{'invisible': [('use_multi_type_commissions', '=', True)]}"
                />
            </field>
            <xpath expr="//field[@name='settlement']/.." position="after">
                <field
                    name="commission_ids"
                    attrs="{'invisible': [('use_multi_type_commissions', '=', False)]}"
                    widget='one2many'
                >
                    <tree string="Commissions" editable="bottom">
                        <field name="sequence" widget="handle" />
                        <field name="commission_id" />
                    </tree>
                </field>
            </xpath>
            <field name="agent_ids" position="after">
                <field name="agent_line_ids">
                    <tree editable="bottom">
                        <field name="customer_id" invisible="1" />
                        <field name="agent_id" />
                    </tree>
                </field>
            </field>
            <field name="agent_ids" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
        </field>
    </record>

    <record id="view_partner_form_agent_customers_form" model="ir.ui.view">
        <field name="name">res.partner.form.agents.customers</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button
                    class="oe_stat_button"
                    type="object"
                    name="action_view_agent_customers"
                    groups="sales_team.group_sale_salesman"
                    icon="fa-address-book"
                    attrs="{'invisible': [('agent', '=', False)]}"
                >
                    <field
                        string="Customers"
                        name="customer_ids_count"
                        widget="statinfo"
                    />
                </button>
            </div>
        </field>
    </record>
</odoo>
